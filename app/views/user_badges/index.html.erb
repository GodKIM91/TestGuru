<div class="row justify-content-center mt-3">
  <div class="col col-md-4"><h2><%= t('.received_badges') %></h2></div>

  <div class="col-12">
    <table class="table table-striped">
      <thead>
      <tr>
        <th><%= t('.badge_name') %></th>
        <th><%= t('.badge_view') %>
        <% if current_user.type == 'Admin' %>
          <th><%= t('.badge_method') %></th>
        <% end%>
        <th><%= t('.badge_parameter') %></th>
      </tr>
      </thead>
      <tbody>
      <%= render partial: 'badge', collection: @user_badges, as: :badge %>
      </tbody>
    </table>
  </div>

  <div class="col col-md-4"><h2><%= t('.exists_badges') %></h2></div>

  <div class="col-12">
    <table class="table table-striped">
      <thead>
      <tr>
        <th><%= t('.badge_name') %></th>
        <th><%= t('.badge_view') %>
        <% if current_user.type == 'Admin' %>
          <th><%= t('.badge_method') %></th>
        <% end%>
        <th><%= t('.badge_parameter') %></th>
      </tr>
      </thead>
      <tbody>
      <%= render partial: 'badge', collection: @badges, as: :badge %>
      </tbody>
    </table>
  </div>
</div>