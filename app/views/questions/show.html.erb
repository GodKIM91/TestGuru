<strong>Вопрос: <%= @question.body %></strong><br>

<h2>Ответы:</h2>
<%= link_to 'Новый ответ', new_question_answer_path(@question) %>
<ol>
  <%= render @question.answers %>
</ol>

<%= link_to 'Редактировать вопрос', edit_question_path(@question) %>
<%= link_to 'Удалить вопрос', question_path(@question), method: :delete, data: { confirm: 'Вы уверены?' } %>
<%= link_to 'К тесту', test_path(@question.test) %>