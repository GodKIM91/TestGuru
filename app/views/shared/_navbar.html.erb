<p class="nav user"><%= link_to t('.project'), root_path %></p>
<% if user_signed_in? %>
  <p class="nav user">
    <%= t('.welcome', user: current_user.first_name.empty? ? current_user.email : current_user.first_name) %> |
    <%= link_to t('.logout'), destroy_user_session_path, method: :delete %>
  </p>
<% else %>
  <p class="nav user">
    <%= link_to t('.signup'), new_user_registration_path %> |
    <%= link_to t('.login'), new_user_session_path %>
  </p>
<% end %>