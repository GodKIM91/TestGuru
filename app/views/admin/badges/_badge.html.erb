<tr>
  <td class="align-middle"><%= badge.name %></td>
  <td class="align-middle">
    <%= image_tag(badge.image, size: 100) %>
  </td>
  <td class="align-middle"><%= badge.rule %></td>
  <td class="align-middle"><%= badge.parameter %></td>
  <td class="align-middle"><%= badge.description %></td>
  <td class="align-middle"><%= link_to t('.show_badge'), admin_badge_path(badge) %></td>
  <td class="align-middle"><%= link_to t('.edit_badge'), edit_admin_badge_path(badge) %></td>
  <td class="align-middle"><%= link_to t('.delete_badge'), admin_badge_path(badge),
                                       method: :delete,
                                       data: { confirm: t('.badge_del_confirm') } %>
  </td>
</tr>